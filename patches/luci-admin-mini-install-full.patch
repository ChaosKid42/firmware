+
+if nixio.fs.access("/bin/opkg") then
+	local admin = luci.http.formvalue("admin")
+	local ssl = luci.http.formvalue("ssl")
+	if ssl or admin then
+		local ipkg = require("luci.model.ipkg")
+		ipkg.update()
+		if admin then
+			if not ipkg.installed("luci-mod-admin-full") then
+				ipkg.install("luci-mod-admin-full")
+				nixio.fs.unlink("/tmp/luci-indexcache")
+			end
+		end
+		if ssl then
+			local restart
+			if not ipkg.installed("ssl-cert") then
+				ipkg.install("ssl-cert")
+				restart = 1
+			end
+			if not ipkg.installed("uhttpd-mod-tls") then
+				ipkg.install("uhttpd-mod-tls")
+				restart = 1
+			end
+			if restart then
+				luci.util.exec("/etc/init.d/uhttpd restart")
+			end
+		end
+	end
+end
+
 return Template("mini/index")
